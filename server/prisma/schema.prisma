generator kysely {
  provider     = "prisma-kysely"
  output       = "../src/database/types"
  fileName     = "types.d.ts"
  enumFileName = "enums.ts"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [pgcrypto]
}

model Regions {
  id          Int                @id @default(autoincrement())
  key         String             @unique
  x           Int
  y           Int
  founder     String
  odds        Int
  digs        String
  /// @kyselyType(JSON)
  posts       Json
}

model Players { 
  id          String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  password    String 
  token       String  @default(dbgenerated("gen_random_uuid()"))
  registered  Boolean @default(false)
  email       String?
}

model Resources { 
  id          String                @id @unique  
  dirt        Int                   
  // ADD OTHER BASICS
}

model Inventories { 
  id          String                @id @unique  
  /// @kyselyType(JSON)
  items       Json
}

model Spellbooks { 
  id          String                @id @unique 
}